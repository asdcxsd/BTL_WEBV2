@using BTL_WEB.Models.Entities
@using BTL_WEB.Models.Functions
@{
    List<tbl_nhasanxuat> list_nxs = new Func_nhasanxuat().DS_NhaSanXuat.ToList();

}
<div id="edit-product-modal" class="modal fade" role="dialog">
    <div style="width:800px;" class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header" style="background-color:#9AFE2E">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h2 style="text-align:center;color:#fff;font-weight:bold" class="modal-title">
                    Sửa sản phẩm
                </h2>
            </div>
            <div class="modal-body">
                <form>
                    @*<label id="idsanpham">  </label>*@
                    <div style="position:relative;background-color:#D8D8D8; width:725px;height:30px ;left:18px;color:#FF0000;text-align:center;font-size:20px;font-weight:bold;" class="modal-title">
                        <label id="tenchinh"></label>
                    </div>
                    <div class="form-group col-md-2">
                        <label>ID: </label>
                        <label id="idsanpham">  </label>
                    </div>

                    <div class="form-group col-md-10">
                        <label>Tên sản phẩm</label>
                        <input id="tensp" type="text" class="form-control" placeholder="" />
                    </div>

                    <div class="form-group col-md-4">
                        <label>Giá sản phẩm</label>
                        <input id="giasp" type="text" class="form-control" placeholder="">
                    </div>

                    <div class="form-group col-md-4">
                        <label>Số lượng</label>
                        <input id="soluongsp" class="form-control" placeholder="">
                    </div>

                    <div class="form-group col-md-4">
                        <label>Trọng lượng</label>
                        <input id="trongluongsp" class="form-control" placeholder="">
                    </div>

                    <div class="form-group col-md-3">
                        <label>Rom</label>
                        <input id="romsp" class="form-control" placeholder="">
                    </div>

                    <div class="form-group col-md-3">
                        <label>Ram</label>
                        <input id="ramsp" class="form-control" placeholder="">
                    </div>

                    <div class="form-group col-md-6">
                        <label>Thẻ nhớ</label>
                        <input id="thenhosp" class="form-control" placeholder="">
                    </div>

                    <div class="form-group col-md-3">
                        <label>Camera trước</label>
                        <input id="cameratruocsp" class="form-control" placeholder="">
                    </div>

                    <div class="form-group col-md-3">
                        <label>Camera sau</label>
                        <input id="camerasausp" class="form-control" placeholder="">
                    </div>

                    <div class="form-group col-md-3">
                        <label>Pin</label>
                        <input id="pinsp" class="form-control" placeholder="">
                    </div>

                    <div class="form-group col-md-3">
                        <label>Bluetooth</label>
                        <input id="bluetoothsp" class="form-control" placeholder="">
                    </div>

                    <div class="form-group col-md-6">
                        <label>CPU</label>
                        <input id="cpusp" class="form-control" placeholder="">
                    </div>

                    <div class="form-group col-md-6">
                        <label>Màn hình</label>
                        <input id="manhinhsp" class="form-control" placeholder="">
                    </div>

                    <div class="form-group col-md-12">
                        <label>Nhà sản xuất</label>
                        <select id="nhasanxuatsp" class="form-control">
                            @foreach (tbl_nhasanxuat nsx in list_nxs)
                            {
                                <option value="@nsx.id">@nsx.ten</option>
                            }
                        </select>
                    </div>

                    <div class="form-group col-md-12">
                        <label>Thời gian bảo hành</label>
                        <input id="thoigianbaohanhsp" class="form-control" placeholder="">
                    </div>

                    <div class="form-group col-md-6">
                        <label>Tình trạng</label>
                        <input id="tinhtrang" class="form-control" placeholder="">
                    </div>
                    <div class="form-group col-md-6">
                        <label>Ảnh</label>
                        <input type="file" name="imgsp">
                    </div>

                </form>


            </div>

            <div>
                <button style="margin-left: 33px; width:150px;" type="button" class="btn btn-success submitsanphamupdate" >Update</button>
            </div>
            <div>
                @*class="modal-footer"*@
                <button style="position:relative;bottom:35px;left:700px;" type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>      