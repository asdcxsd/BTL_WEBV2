@using BTL_WEB.Models.Entities
@{
    ViewBag.Title = "Search Page";
    var listImg = (Dictionary<int, string>)ViewBag.Anh;
    int i = 0;
}

@using BTL_WEB.Models.Entities;
@model List<tbl_sanpham>

